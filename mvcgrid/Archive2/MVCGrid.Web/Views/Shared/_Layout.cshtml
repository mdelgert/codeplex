        if (document.getElementById("TAGS") != null) {

            //TAG manager needs the values in a tab delimited list like this
            var str = document.getElementById("TAGS").value;
            temp = str.split(",");

            //alert(temp);

            document.getElementById("TAGS").className = document.getElementById("TAGS").className + "tagManager"; //Adds tag manager class to the field
            jQuery(".tagManager").tagsManager({
                prefilled: temp,
                CapitalizeFirstLetter: true,
                preventSubmitOnEnter: true,
                typeahead: true,
                typeaheadAjaxSource: null,
                delimeters: [44, 188, 13],
                backspace: [8],
                blinkBGColor_1: '#FFFF9C',
                blinkBGColor_2: '#CDE69C'
